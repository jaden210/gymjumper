{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "functions/dist",
    "rewrites": [
      {
        "source": "**",
        "function": "http"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}